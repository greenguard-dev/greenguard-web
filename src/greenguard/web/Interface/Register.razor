@using web.Services.Version

<main id="register" class="padding responsive">
    <article class="l m large-padding auto-width absolute center middle">
        <form hx-post="/register" hx-target="#register" hx-swap="outerHTML" class="grid large-space">
            <div class="l12 m12">
                <nav>
                    <i class="circle extra">psychiatry</i>
                    <h4>greenguard</h4>
                </nav>
                <pre>@(VersionInfo.InformationalVersion)</pre>
            </div>
            <div class="l12 m12 grid no-space">
                <div class="l12 m12">
                    <div class="field label border">
                        <input type="text" name="username" value="@Username">
                        <label>Username</label>
                    </div>
                </div>
                <div class="l12 m12">
                    <div class="field label border">
                        <input type="password" name="password">
                        <label>Password</label>
                    </div>
                </div>
                <div class="l12 m12">
                    <div class="field label border">
                        <input type="password" name="repeat">
                        <label>Password (repeat)</label>
                    </div>
                </div>
            </div>
            <div class="l12 m12">
                <nav hx-disinherit="*">
                    <a href="/login" class="button border">Login</a>
                    <div class="max"></div>
                    <button type="submit">Register</button>
                </nav>
            </div>
        </form>
    </article>

    <form hx-post="/register" hx-target="#register" hx-swap="outerHTML" class="s grid">
        <div class="s12">
            <nav>
                <i class="circle extra">psychiatry</i>
                <h4>greenguard</h4>
            </nav>
            <pre>@(VersionInfo.InformationalVersion)</pre>
        </div>
        <div class="s12 grid no-space">
            <div class="s12">
                <div class="field label border">
                    <input type="text" name="username" value="@Username">
                    <label>Username</label>
                </div>
            </div>
            <div class="s12">
                <div class="field label border">
                    <input type="password" name="password">
                    <label>Password</label>
                </div>
            </div>
            <div class="s12">
                <div class="field label border">
                    <input type="password" name="repeat">
                    <label>Password (repeat)</label>
                </div>
            </div>
        </div>
        <div class="s12">
            <nav hx-disinherit="*">
                <a href="/login" class="button border">Login</a>
                <div class="max"></div>
                <button type="submit">Register</button>
            </nav>
        </div>
    </form>
</main>

@code {
    [Inject] public required IVersionInfo VersionInfo { get; set; }
    [Parameter] public string? Username { get; set; }
}